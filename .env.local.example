# Directus API Configuration
NEXT_PUBLIC_DIRECTUS_URL=https://admin.buyjan.com
NEXT_PUBLIC_SITE_URL=https://buyjan.com

# Directus Admin Credentials (for authentication)
# These are used by test scripts and authentication endpoints
DIRECTUS_ADMIN_EMAIL=admin@buyjan.com
DIRECTUS_ADMIN_PASSWORD=your_admin_password_here

# API Keys (REQUIRED)
# Static token for API access
# Obtain from Directus admin panel: Settings > API Tokens
# Or ask your project lead for the development token
DIRECTUS_API_TOKEN=your_directus_static_token_here
NEXT_PUBLIC_DIRECTUS_API_TOKEN=your_directus_static_token_here

# Environment
NODE_ENV=development

# Analytics (optional)
NEXT_PUBLIC_GA_ID=your_google_analytics_id
